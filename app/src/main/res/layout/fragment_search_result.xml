<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/topView">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/btn_back_default"
                android:layout_centerVertical="true"
                android:id="@+id/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:textSize="@dimen/main_big_title_size"
                android:singleLine="true"
                android:textColor="@color/main_black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back"
                android:layout_marginLeft="20dp"
                android:id="@+id/title"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/topView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="28dp"
                android:paddingRight="28dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/best_distance"
                        android:textSize="@dimen/main_title_size"
                        android:textColor="@color/main_black"
                        android:id="@+id/discount"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/discount"
                        android:layout_alignParentRight="true"
                        android:id="@+id/moreNearStore">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more_discount"
                            android:textSize="@dimen/main_lit_text_size"
                            android:textColor="@color/hint_gray"
                            android:id="@+id/moreNearStoreTitle"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_alignLeft="@+id/moreNearStoreTitle"
                            android:layout_alignRight="@+id/moreNearStoreTitle"
                            android:layout_below="@+id/moreNearStoreTitle"
                            android:background="@color/hint_gray"/>
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/discount"
                        android:layout_marginTop="8dp"
                        android:id="@+id/nearList"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/discount"
                        android:layout_marginTop="8dp"
                        android:text="@string/near_no_store"
                        android:textSize="@dimen/main_text_size"
                        android:textColor="@color/hint_gray"
                        android:visibility="gone"
                        android:id="@+id/noNearStore"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hot"
                        android:textSize="@dimen/main_title_size"
                        android:textColor="@color/main_black"
                        android:id="@+id/hot"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moreHot"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/hot">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more_discount"
                            android:textSize="@dimen/main_lit_text_size"
                            android:textColor="@color/hint_gray"
                            android:id="@+id/hotTitle"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_alignLeft="@+id/hotTitle"
                            android:layout_alignRight="@+id/hotTitle"
                            android:layout_below="@+id/hotTitle"
                            android:background="@color/hint_gray"/>

                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hot"
                        android:layout_marginTop="8dp"
                        android:id="@+id/hotList"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hot"
                        android:layout_marginTop="8dp"
                        android:text="@string/near_no_store"
                        android:textSize="@dimen/main_text_size"
                        android:textColor="@color/hint_gray"
                        android:visibility="gone"
                        android:id="@+id/noHot"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/best_evaluation"
                        android:textSize="@dimen/main_title_size"
                        android:textColor="@color/main_black"
                        android:id="@+id/evaluation"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moreBest"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/evaluation">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more_discount"
                            android:textSize="@dimen/main_lit_text_size"
                            android:textColor="@color/hint_gray"
                            android:id="@+id/moreBestTitle"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_alignLeft="@+id/moreBestTitle"
                            android:layout_alignRight="@+id/moreBestTitle"
                            android:layout_below="@+id/moreBestTitle"
                            android:background="@color/hint_gray"/>

                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/evaluation"
                        android:layout_marginTop="8dp"
                        android:id="@+id/bestList"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/evaluation"
                        android:layout_marginTop="8dp"
                        android:text="@string/near_no_store"
                        android:textSize="@dimen/main_text_size"
                        android:textColor="@color/hint_gray"
                        android:visibility="gone"
                        android:id="@+id/noBest"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:id="@+id/bottomDialog"
            android:elevation="3dp">

        </RelativeLayout>

        <com.company.shougo.widget.TravelBtnWidget
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:id="@+id/travelBtn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>