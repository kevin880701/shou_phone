<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.company.shougo.widget.TopBarWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/topBar"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/bg35_line_gray"
                    app:layout_constraintTop_toBottomOf="@+id/topBar"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/search">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/search_discount_attractions"
                        android:textSize="@dimen/main_lit_text_size"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/search_ic_default"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/search"
                    android:id="@+id/fastSearch">
                    <com.company.shougo.widget.FastWidget
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/item1"/>
                    <com.company.shougo.widget.FastWidget
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/item2"/>
                    <com.company.shougo.widget.FastWidget
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/item3"/>
                    <com.company.shougo.widget.FastWidget
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/item4"/>
                    <com.company.shougo.widget.FastWidget
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/item5"/>
                    <com.company.shougo.widget.FastWidget
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/other"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recommend_discount"
                        android:textSize="@dimen/main_title_size"
                        android:textColor="@color/main_black"
                        android:id="@+id/discount"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moreDiscount"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/discount">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more_discount"
                            android:textSize="@dimen/main_lit_text_size"
                            android:textColor="@color/hint_gray"
                            android:id="@+id/moreDiscountTitle"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_alignLeft="@+id/moreDiscountTitle"
                            android:layout_alignRight="@+id/moreDiscountTitle"
                            android:layout_below="@+id/moreDiscountTitle"
                            android:background="@color/hint_gray"/>
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/discount"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:id="@+id/discountList"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/discount"
                        android:layout_marginTop="8dp"
                        android:text="@string/near_no_store"
                        android:textSize="@dimen/main_text_size"
                        android:textColor="@color/hint_gray"
                        android:visibility="visible"
                        android:id="@+id/noDiscount"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hot"
                        android:textSize="@dimen/main_title_size"
                        android:textColor="@color/main_black"
                        android:id="@+id/attractions"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moreAttractions"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/attractions">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more_attractions"
                            android:textSize="@dimen/main_lit_text_size"
                            android:textColor="@color/hint_gray"
                            android:id="@+id/attractionsTitle"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_alignLeft="@+id/attractionsTitle"
                            android:layout_alignRight="@+id/attractionsTitle"
                            android:layout_below="@+id/attractionsTitle"
                            android:background="@color/hint_gray"/>
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/attractions"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:id="@+id/attractionsList"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/attractions"
                        android:layout_marginTop="8dp"
                        android:text="@string/near_no_store"
                        android:textSize="@dimen/main_text_size"
                        android:textColor="@color/hint_gray"
                        android:visibility="visible"
                        android:id="@+id/noAttractions"/>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            android:orientation="vertical"
            android:id="@+id/bottomDialog"
            android:elevation="3dp">

        </RelativeLayout>

        <com.company.shougo.widget.TravelBtnWidget
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:id="@+id/travelBtn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>