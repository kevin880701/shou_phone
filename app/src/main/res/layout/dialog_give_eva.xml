<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg10_white"
        android:id="@+id/view">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_cancel"
            android:layout_alignParentRight="true"
            android:id="@+id/close"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="@dimen/main_title_size"
            android:textStyle="bold"
            android:id="@+id/title"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_below="@+id/title"
            android:layout_marginTop="16dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/score2"
                app:layout_constraintHorizontal_weight="1"
                android:src="@drawable/btn_score_default"
                android:adjustViewBounds="true"
                android:id="@+id/score1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/score1"
                app:layout_constraintRight_toLeftOf="@+id/score3"
                app:layout_constraintHorizontal_weight="1"
                android:src="@drawable/btn_score_default"
                android:adjustViewBounds="true"
                android:id="@+id/score2"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/score2"
                app:layout_constraintRight_toLeftOf="@+id/score4"
                app:layout_constraintHorizontal_weight="1"
                android:src="@drawable/btn_score_default"
                android:adjustViewBounds="true"
                android:id="@+id/score3"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/score3"
                app:layout_constraintRight_toLeftOf="@+id/score5"
                app:layout_constraintHorizontal_weight="1"
                android:src="@drawable/btn_score_default"
                android:adjustViewBounds="true"
                android:id="@+id/score4"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/score4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/btn_score_default"
                android:id="@+id/score5"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintTop_toBottomOf="@+id/score1"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg5_line_black"
                android:hint="@string/enter_eva"
                android:textSize="@dimen/main_small_text_size"
                android:textColor="@color/main_black"
                android:gravity="left|top"
                android:padding="10dp"
                android:id="@+id/edit"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="116dp"
                android:layout_height="36dp"
                app:layout_constraintTop_toBottomOf="@+id/edit"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg35_black"
                android:text="@string/send_out"
                android:textColor="@color/white"
                android:textSize="@dimen/main_title_size"
                android:id="@+id/send"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</layout>