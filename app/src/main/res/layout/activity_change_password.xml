<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            android:id="@+id/topView">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_back_default"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_password"
                android:textSize="@dimen/main_big_title_size"
                android:textColor="@color/main_black"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/topView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/bg_gray"
            android:paddingLeft="@dimen/btn_p_l"
            android:paddingRight="@dimen/btn_p_r">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg10_white"
                android:elevation="3dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">
                <com.company.shougo.widget.ChangePasswordEditWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    app:password_type="oldPassword"
                    android:id="@+id/oldPassword"/>
                <com.company.shougo.widget.ChangePasswordEditWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:password_type="newPassword"
                    android:id="@+id/newPassword"/>
                <com.company.shougo.widget.ChangePasswordEditWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:password_type="confirmNewPassword"
                    android:id="@+id/confirmNewPassword"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/confirm"
                android:textSize="@dimen/main_title_size"
                android:textColor="@color/white"
                android:background="@drawable/bg35_black"
                android:id="@+id/change_finish"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>