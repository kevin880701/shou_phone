<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_top5_white"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:id="@+id/mainView">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/topView">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/btn_back_default"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/back"
                    android:textSize="@dimen/main_big_title_size"
                    android:textStyle="bold"
                    android:textColor="@color/main_black"
                    android:id="@+id/title"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/sheet_btn_share_default"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/favorite"
                    android:layout_marginRight="16dp"
                    android:id="@+id/share"/>
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/sheet_btn_like_default"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/favorite"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <include
                    layout="@layout/include_ticket_detail"
                    android:id="@+id/detailView"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>